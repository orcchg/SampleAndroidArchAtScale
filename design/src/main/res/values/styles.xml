<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->
    <style name="ThemeOverlay.MyTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.MyTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!-- Button -->
    <style name="Widget.MyTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:elevation">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">@dimen/keyline_4</item>
        <item name="android:paddingBottom">@dimen/keyline_4</item>
        <item name="backgroundTint">@color/btn_bg_color</item>
        <item name="elevation">0dp</item>
        <item name="minHeight">@dimen/keyline_9</item>
        <item name="shapeAppearance">?shapeAppearanceMediumComponent</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <!--Recycler View-->
    <style name="Widget.MyTheme.Shimmer" parent="">
        <item name="shimmer_base_alpha">1</item>
        <item name="shimmer_base_color">?colorHelperShimmer</item>
        <item name="shimmer_colored">true</item>
        <item name="shimmer_highlight_color">@color/white</item>
        <item name="shimmer_width_ratio">1.3</item>
    </style>

    <!-- TabLayout View-->
    <style name="Widget.MyTheme.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabGravity">start</item>
        <item name="tabIndicator">@null</item>
        <item name="tabMode">scrollable</item>
        <item name="tabPaddingStart">@dimen/keyline_4</item>
        <item name="tabPaddingEnd">@dimen/keyline_4</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextAppearance">@style/TextAppearance.MyTheme.TabLayout.Normal</item>
        <item name="tabTextColor">?colorOnSurfaceSecondary</item>
        <item name="tabSelectedTextColor">?colorOnSurface</item>
        <item name="tabUnboundedRipple">@null</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <!-- Text Input -->
    <style name="Widget.MyTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyTheme.TextInputEditText</item>
        <item name="boxBackgroundColor">@null</item>
        <item name="boxStrokeWidth">@dimen/no_dp</item>
        <item name="boxStrokeWidthFocused">@dimen/no_dp</item>
        <item name="expandedHintEnabled">true</item>
        <item name="helperTextEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintTextColor">@android:color/transparent</item>
        <item name="android:textColorHint">?colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.MyTheme.TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="colorControlActivated">?colorOnSurface</item>
        <item name="editTextStyle">@style/Widget.MyTheme.TextInputEditText</item>
    </style>

    <style name="Widget.MyTheme.TextInputEditText" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:paddingTop">@dimen/no_dp</item>
        <item name="android:paddingBottom">@dimen/no_dp</item>
        <item name="android:paddingLeft">@dimen/no_dp</item>
        <item name="android:paddingRight">@dimen/no_dp</item>
        <item name="android:paddingStart">@dimen/no_dp</item>
        <item name="android:paddingEnd">@dimen/no_dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="textInputLayoutFocusedRectEnabled">false</item>
    </style>

</resources>